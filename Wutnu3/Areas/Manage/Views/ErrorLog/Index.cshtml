@using Wutnu.Common
@{
    ViewBag.Title = Utils.ApplicationName + " - Error Logs";
}
<div class="panel panel-primary" style="margin-top:10px;position:relative;">
    <div class="panel-heading">Error Log</div>
    <div class="panel-body" style="padding: 12px;">
            <div id="tablewrap">
            <table id="errorlist" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Source</th>
                        <th>Summary</th>
                        <th>URI</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="ErrorDialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Error Details</h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Delete Error</button>
                <button type="button" class="btn btn-warning">Delete All Similar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/datatables")
    <script src="/Scripts/app/ErrorLog.js" type="text/javascript"></script>
}

@section styles{
    @Styles.Render("~/Content/datatablescss")
    <link rel="stylesheet" type="text/css" href="/Content/ErrorLog.css"/>
}
