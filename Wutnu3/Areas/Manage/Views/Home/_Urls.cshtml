@{ 
    var rootUrl = ViewData["rootUrl"];
}
<div class="panel panel-primary" style="margin-top:10px;position:relative;">
    <div class="panel-heading">My Saved URLs</div>
    <div class="panel-body" style="padding: 12px;">
        <div id="tablewrap">
            <table id="urllist" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Short Link</th>
                        <th>Full Link</th>
                        <th>Protected</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="EditLinkDialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Edit Link</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-2"><label for="ShortUrl">Short Link</label></div>
                    <div class="col-xs-10">
                        <div class="input-group">
                            <input type="text" class="form-control" id="ShortUrl" name="ShortUrl">
                            <div class="input-group-addon"><span id="shortUrlStatus" class="glyphicon glyphicon-ok"></span></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2"><label for="testShortLink">Test Link</label></div>
                    <div class="col-xs-10">
                        <div class="input-group">
                            <input class="form-control" id="testShortLink" data-root="@rootUrl" value="@rootUrl" />
                            <span title="Click to open the link in a new window" class="glyphicon glyphicon-link input-group-addon" id="btnOpenTestLink"></span>
                            <span title="Click to copy the test link to the clipboard" class="glyphicon glyphicon-copy input-group-addon" id="btnCopyTestLink"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2"><label for="RealUrl">Full Link</label></div>
                    <div class="col-xs-10"><input class="form-control" type="text" id="RealUrl" name="RealUrl" /></div>
                </div>
                <div class="row">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10"><label><input type="checkbox" id="IsProtected" name="IsProtected" /> Protected</label></div>
                </div>
                <div class="row" id="protectedInfo" style="display:none;margin-bottom:8px;background-color:#fafafa;padding;4px;">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10">
                        <label for="UserEmails">Enter emails, separated with a comma</label>
                        <textarea id="UserEmails" name="UserEmails" class="form-control"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2"><label for="Comments">Comments</label></div>
                    <div class="col-xs-10"><textarea class="form-control" id="Comments" name="Comments"></textarea></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="btnSaveUrl" class="btn btn-primary save">Save</button>
                <button type="button" id="btnDeleteUrl" class="btn btn-warning delete">Delete</button>
            </div>
        </div>
    </div>
</div>